
<%= nested_form_for @task do |f| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
</div>
  <% end %>

<table>
  <thead>
    <tr>
      <th>  <%= f.label :projeto_id, "Projeto do Cliente" %></th>
      <th>  <%= f.label :seq, "ID Raiz" %></th>
      <th>  <%= f.label :seqpai, "ID Ramo" %></th>
      <th> <%= f.label :typo, "Tipo" %></th>
      <th>  <%= f.label :descr, "Descrição" %></th>
  <th>   <%= f.label :hour, "Carga Horaria" %></th>
     
    </tr>
  </thead>

<tbody>
      <tr>
        <td><%= f.grouped_collection_select :projeto_id, Cliente.order(:name), :projetos, :name, :id, :name, prompt: "Projeto" %></td>
        <td> <%= f.number_field :seq  %></td>
        <td>     <%= f.number_field :seqpai %></td>
        <td>      <%= f.select("typo", {"Sintetica" => "Sintetica"}) %></td>
<td>    <%= f.text_field :descr %></td>
        <td>  <%= f.number_field :hour %></td>
     
<td><%= f.link_to_remove "Remover" %></td>
  
      </tr>
 
  </tbody>
</table>

<div class="actions">

   <%= f.button 'Adicionar', type: 'button', class: 'adicionar' %>
  <%= f.submit 'Enviar', class: 'btn btn-primary btn-lg' %>
</div>
<br>
<% end %>
