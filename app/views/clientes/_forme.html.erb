   <%= ff.text_field :km , placeholder: "Distância"%>
<br />
<%= ff.link_to_remove "X",class: 'm-btn red icn-only' %>


<% end %>


 

 <%= f.link_to_add "Adicionar Local", :locals, class: 'button success' %> <br>
