            </div>

  <br />
  <br />

<div class="input-control text full-size" data-role="input">
                <label for="user_login">Email:</label>
                
 <%= f.text_field :email, id: 'user_login', required: true, placeholder: "Endereço de Email" %>
             
            </div>
  <br />

  <br />

            <br />  

   <%= f.fields_for :locals do |ff| %> 


