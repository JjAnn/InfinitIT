            form.css({
                opacity: 1,
                "-webkit-transform": "scale(1)",
                "transform": "scale(1)",
                "-webkit-transition": ".5s",
                "transition": ".5s"
            });
        });
 

    $(function(){
            var form = $(".cad-form");

            form.css({
                opacity: 1,
